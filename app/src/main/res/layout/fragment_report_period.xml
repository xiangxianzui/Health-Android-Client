<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hiddenTextView1"
        android:text=""
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hiddenTextView2"
        android:text=""
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startDateEditText"
            android:editable="false"
            android:text="Select start date"
            android:gravity="center"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endDateEditText"
            android:editable="false"
            android:text="Select end date"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steps"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:gravity="center"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Bar Graph"
            android:id="@+id/showBarButton"
            android:layout_margin="2dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Line Graph"
            android:id="@+id/showLineButton"
            android:layout_margin="2dp"
            android:visibility="gone"/>
        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/lineGraph"
            android:visibility="gone"
            />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/barGragh"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calories"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:gravity="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Bar Graph"
            android:id="@+id/showBarButton1"
            android:layout_margin="2dp"
            android:visibility="gone"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Line Graph"
            android:id="@+id/showLineButton1"
            android:layout_margin="2dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="------Consumed"
                android:textColor="#FF4500"
                android:layout_weight="1"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="------Burned"
                android:textColor="#4A708B"
                android:layout_weight="1"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="------Goal"
                android:textColor="#7D26CD"
                android:layout_weight="1"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="------Remain"
                android:textColor="#B22222"
                android:layout_weight="1"
                android:gravity="right"/>
        </LinearLayout>
        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/lineGraph1"

            />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/barGragh1"
            android:visibility="gone"
            />
    </LinearLayout>



</LinearLayout>